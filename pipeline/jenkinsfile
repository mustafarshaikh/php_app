pipeline {
    agent any

    triggers {
        pollSCM('* * * * *') // Poll every minute
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull the latest code from the repository
                git branch: 'main', credentialsId: 'localjenkins', url: 'git@github.com:mustafarshaikh/php_app.git'
            }
        }
    }
}
