pipeline {
    agent any

    triggers {
        pollSCM('* * * * *') // Poll every minute
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull the latest code from the repository
                git branch: 'main', credentialsId: 'your-credentials-id', url: 'git@github.com:username/repo.git'
            }
        }
    }
}
